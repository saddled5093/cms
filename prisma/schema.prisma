
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        String     @id @default(cuid())
  username  String     @unique
  password  String
  role      UserRole   @default(USER)
  notes     Note[]
  comments  Comment[]  @relation("UserComments")
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
}

enum UserRole {
  USER
  ADMIN
}

model Note {
  id            String     @id @default(cuid())
  title         String
  content       String
  categories    Category[] @relation("NoteCategories")
  tags          String[]
  province      String
  phoneNumbers  String[]
  eventDate     DateTime
  isArchived    Boolean    @default(false)
  isPublished   Boolean    @default(false)
  authorId      String
  author        User       @relation(fields: [authorId], references: [id])
  comments      Comment[]  @relation("NoteComments")
  rating        Int?       @default(0) // Rating from 0 to 5, null or 0 means not rated
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt

  @@index([authorId])
}

model Category {
  id    String @id @default(cuid())
  name  String @unique
  notes Note[] @relation("NoteCategories")
}

model Comment {
  id        String   @id @default(cuid())
  content   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  authorId  String
  author    User     @relation("UserComments", fields: [authorId], references: [id])
  noteId    String
  note      Note     @relation("NoteComments", fields: [noteId], references: [id])

  @@index([authorId])
  @@index([noteId])
}
